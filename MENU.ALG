         escreval ("")

      caso 4
         // Sequencia alternada

         escreval ("Bem vindo a funÃ§Ã£o de sequÃªncia alternada.")
         escreval ("")

         escreva ("Insira o valor do primeiro termo da sequÃªncia: ")
         leia (termo_alt)
