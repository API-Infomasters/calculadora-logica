      caso 2
         // Sequencia de cubos perfeitos

         escreva ("Digite um termo da sequÃªncia de cubos perfeitoss:")
         leia (termo_cub)
         escreval ("")
         escreval ("Seu valor correspondente na sequÃªncia Ã©:", termo_cub ^ 3)

         para i_cub de 1 ate 50 faca

            valor_cub <- (termo_cub + i_cub) ^ 3
            escreval ("O termo", i_cub + termo_cub, " da sequÃªncia Ã©:", valor_cub)

         fimpara

         escreval ("")
         escreval ("SequÃªncia completa com", i_cub, " termos!")
         escreval ("")

      caso 3
