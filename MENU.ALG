         enquanto (termo_alt < 1) faca
            escreva ("Valor invÃ¡lido, digite novamente:")
            leia (termo_alt)
            escreval ("")
         fimenquanto

         escreva ("Insira tambÃ©m a razÃ£o da sequÃªncia: ")
         leia (razao_alt)
         escreval ("")

         enquanto (razao_alt <= 1) faca
            escreva ("Valor invÃ¡lido, digite novamente:")
            leia (razao_alt)
            escreval ("")
         fimenquanto

         razao_alt <- razao_alt * -1

         escreva ("Por Ãºltimo, insira a quantidade de termos da sequÃªncia: ")
         leia(qtd_termos_alt)
         escreval ("")

         enquanto (qtd_termos_alt <= 0) faca

            escreval ("NÃºmero invÃ¡lido, digite novamente.")
            leia (qtd_termos_alt)
            escreval ("")

         fimenquanto

         escreval ("Qual termo vocÃª deseja que seja positivo?")
         escreval ("")

         escreval ("Para o primeiro termo, digite 1.")
         escreval ("Para o segundo termo, digite 2.")
         escreval ("")

         leia (opcao_alt)
         escreval ("")

         enquanto (opcao_alt < 1) ou (opcao_alt > 2) faca
            escreva ("Valor invÃ¡lido, digite novamente:")
            leia (opcao_alt)
            escreval ("")
         fimenquanto

         escolha (opcao_alt)

         caso 1
            alt_sinal_alt <- 1
            termo_alt <- termo_alt * alt_sinal_alt

         caso 2
            alt_sinal_alt <- -1
            termo_alt <- termo_alt * alt_sinal_alt

         fimescolha

         escreval ("O termo 1 da sequÃªncia Ã©:", termo_alt)

         para i_alt de 1 ate qtd_termos_alt faca

            termo_alt <- (termo_alt * razao_alt)
            escreval ("O termo", i_alt + 1, " da sequÃªncia Ã©:", termo_alt)

         fimpara

         escreval ("")
         escreval ("SequÃªncia alternada completa com", qtd_termos_alt + 1, " termos!")
         escreval ("")

      caso 5
         //Sequencia de tribonacci

         escreva ("Digite o primeiro termo da sequÃªncia de Tribonacci: ")
         leia (termo_um_tri)

         termo_dois_tri <- 1
         termo_tres_tri <- 1

         escreval ("Sequencia de Tribonacci com primeiro termo ", termo_um_tri, ":")
         escreval ("Termo 1: ", termo_um_tri)
         escreval ("Termo 2: ", termo_dois_tri)
         escreval ("Termo 3: ", termo_tres_tri)

         para contador_tri de 4 ate 52 faca
            termo_seguinte_tri <- termo_um_tri + termo_dois_tri + termo_tres_tri
            escreval ("Termo", contador_tri, ": ", termo_seguinte_tri)

            termo_um_tri <- termo_dois_tri
            termo_dois_tri <- termo_tres_tri
            termo_tres_tri <- termo_seguinte_tri
         fimpara

         escreval ("")
         escreval ("SequÃªncia de Tribonacci completa com 52 termos!")

      caso 6
         // Sequencia de fibonacci

         // Solicita o primeiro termo ao usuÃ¡rio
         escreva ("Digite o primeiro termo da sequÃªncia de Fibonacci: ")
         leia (primeiro_termo_fib)

         // Define o segundo termo como 1 (padrÃ£o da sequÃªncia de Fibonacci)
         segundo_termo_fib <- 1

         // Exibe o cabeÃ§alho
         escreval ("SequÃªncia de Fibonacci com primeiro termo ", primeiro_termo_fib, ":")
         escreval ("Termo 1:  ", primeiro_termo_fib)
         escreval ("Termo 2:  ", segundo_termo_fib)

         // Calcula e exibe os prÃ³ximos 50 termos (termos 3 a 52)
         para contador_fib de 3 ate 52 faca
            proximo_termo_fib <- primeiro_termo_fib + segundo_termo_fib
            escreval ("Termo ", contador_fib, ": ", proximo_termo_fib)

            // Atualiza os valores para a prÃ³xima iteraÃ§Ã£o
            primeiro_termo_fib <- segundo_termo_fib
            segundo_termo_fib <- proximo_termo_fib
         fimpara

         escreval ("")
         escreval ("SequÃªncia de Fibonacci completa com 52 termos!")
         escreval ("")

      caso 9

         continuar <- "S"

         enquanto (continuar = "S") ou (continuar = "s") faca

            // Pede um número até ser válido
            repita
               escreva("Digite o termo (inteiro e positivo) que deseja calcular: ")
               leia(n)

               // Adiciona a validação: n deve ser positivo e igual à sua parte inteira
               se (n < 1) ou (n <> int(n)) entao
                  escreval("Valor inválido! Insira um número inteiro positivo.")
               fimse

            ate (n >= 1) e (n = int(n)) // Condição de saída: n é positivo e é inteiro

            // Converte n para inteiro para o resto do cálculo
            m_base_calc <- int(n)

            // Calcula o n-ésimo termo e os 50 seguintes
            escreval("")

            para indice de 0 ate 50 faca
               m <- m_base_calc + indice
               termos[indice + 1] <- (m * (m + 1)) div 2
            fimpara

            // Mostra o termo correspondente e os 50 seguintes
            escreval("O ", m_base_calc, "º termo da sequência de triângulos perfeitos é: ", termos[1])
            escreval("")
            escreval("Os 50 termos seguintes são:")

            para indice de 2 ate 51 faca
               escreval("T -", m_base_calc + indice - 1, " = ", termos[indice])
            fimpara

            escreval("")
            escreva("Deseja continuar a execução (S/N)? ")
            leia(continuar)
         fimenquanto

      caso 10

      fimescolha

   fimenquanto

